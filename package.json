{
  "name": "www-write-music",
  "private": true,
  "license": "MIT",
  "repository": "wooorm/write-music",
  "bugs": "https://github.com/wooorm/write-music/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "type": "module",
  "devDependencies": {
    "@types/debounce": "^1.0.0",
    "@types/virtual-dom": "^2.0.0",
    "cssnano": "^6.0.0",
    "debounce": "^1.0.0",
    "esbuild": "^0.17.0",
    "global": "^4.0.0",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.0.0",
    "rehype-cli": "^11.0.0",
    "rehype-preset-minify": "^6.0.0",
    "rehype-prevent-favicon-request": "^3.0.0",
    "remark-cli": "^11.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "retext-english": "^4.0.0",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^33.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^5.0.0",
    "unified": "^10.0.0",
    "unist-util-visit": "^4.0.0",
    "virtual-dom": "^2.0.0",
    "xo": "^0.54.0"
  },
  "scripts": {
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix && stylelint src/index.css --fix",
    "generate:js": "esbuild src/index.js --bundle --minify --target=es6 --outfile=dest/index.nomodule.js && esbuild src/index.js --bundle --minify --target=es2020 --format=esm --outfile=dest/index.module.js",
    "generate:css": "postcss src/index.css > dest/index.css",
    "generate:html": "rehype -u preset-minify -u prevent-favicon-request src -o dest",
    "generate": "npm run generate:js && npm run generate:css && npm run generate:html",
    "test": "npm run build && npm run format && npm run generate"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "unicorn/prefer-dom-node-append": "off"
    }
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true,
    "ignoreCatch": true
  }
}
